[Unit]
Description=Pi Log Ingestion Service
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/pi-log/app
ExecStart=/usr/bin/python3 -m app.ingestion_loop
WorkingDirectory=/opt/pi-log
Restart=on-failure
RestartSec=5
StandardOutput=append:/opt/pi-log/logs/service.log
StandardError=append:/opt/pi-log/logs/error.log

[Install]
WantedBy=multi-user.target
