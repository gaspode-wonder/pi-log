---
profile: production

# Only lint Ansible content inside the ansible/ directory
project_dir: ansible

# Ignore roles generated by Galaxy or external sources
exclude_paths:
  - ansible/roles/*/tests/
  - ansible/collections/

# Enable useful formatters
parseable: true
display_relative_path: true

# Rules to enable/disable (see below)
warn_list:
  - experimental  # allow experimental rules as warnings
  - risky-file-permissions

skip_list:
  - yaml  # VS Code + yamllint already covers this
  - fqcn-builtins  # optional: allow short-form module names
  - no-changed-when  # too noisy for idempotent tasks that are safe
